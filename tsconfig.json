{
  "compilerOptions": {
    //default
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "sourceMap": true, // foco no debug
    "forceConsistentCasingInFileNames": true,
    "strict": true,

    //para o TypeORM
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules", "./dist"]
}
